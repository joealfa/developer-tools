{
  "name": "developer-utilities",
  "displayName": "Developer Tools",
  "description": "A productivity toolkit for developers: generate UUIDs/GUIDs, create secure passwords, annotate code lines with persistent notes, track coding sessions, monitor listening ports, and analyze code complexity â€” all from the VS Code sidebar.",
  "publisher": "joealfa",
  "repository": {
    "url": "https://github.com/joealfa/developer-tools"
  },
  "icon": "images/icon.png",
  "version": "1.0.4",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "developer-tools.insertUuid",
        "title": "Insert UUID",
        "category": "Developer Tools"
      },
      {
        "command": "developer-tools.insertGuid",
        "title": "Insert GUID (Uppercase)",
        "category": "Developer Tools"
      },
      {
        "command": "developer-tools.insertUuidCompact",
        "title": "Insert UUID (Compact)",
        "category": "Developer Tools"
      },
      {
        "command": "developer-tools.insertGuidCompact",
        "title": "Insert GUID (Compact, Uppercase)",
        "category": "Developer Tools"
      },
      {
        "command": "developer-tools.generatePassword",
        "title": "Generate Password",
        "category": "Developer Tools"
      },
      {
        "command": "developer-tools.addNote",
        "title": "Add Note to Line",
        "category": "Developer Tools",
        "icon": "$(add)"
      },
      {
        "command": "developer-tools.editNote",
        "title": "Edit Note",
        "category": "Developer Tools",
        "icon": "$(edit)"
      },
      {
        "command": "developer-tools.deleteNote",
        "title": "Delete Note",
        "category": "Developer Tools",
        "icon": "$(trash)"
      },
      {
        "command": "developer-tools.showNotesPanel",
        "title": "Show Notes Panel",
        "category": "Developer Tools",
        "icon": "$(note)"
      },
      {
        "command": "developer-tools.exportNotes",
        "title": "Export Notes",
        "category": "Developer Tools",
        "icon": "$(export)"
      },
      {
        "command": "developer-tools.importNotes",
        "title": "Import Notes",
        "category": "Developer Tools",
        "icon": "$(import)"
      },
      {
        "command": "developer-tools.startSession",
        "title": "Start Session Tracking",
        "category": "Developer Tools"
      },
      {
        "command": "developer-tools.stopSession",
        "title": "Stop Session Tracking",
        "category": "Developer Tools"
      },
      {
        "command": "developer-tools.resetSession",
        "title": "Reset Session",
        "category": "Developer Tools"
      },
      {
        "command": "developer-tools.showSessionSummary",
        "title": "Show Session Summary",
        "category": "Developer Tools"
      },
      {
        "command": "developer-tools.showSessionHistory",
        "title": "Show Session History",
        "category": "Developer Tools"
      },
      {
        "command": "developer-tools.deleteSession",
        "title": "Delete Session",
        "category": "Developer Tools"
      },
      {
        "command": "developer-tools.deleteAllSessions",
        "title": "Delete All Sessions",
        "category": "Developer Tools"
      },
      {
        "command": "developer-tools.refreshPorts",
        "title": "Refresh Port List",
        "category": "Developer Tools"
      },
      {
        "command": "developer-tools.killPort",
        "title": "Kill Process on Port",
        "category": "Developer Tools"
      },
      {
        "command": "developer-tools.showPortManager",
        "title": "Show Port Manager",
        "category": "Developer Tools"
      },
      {
        "command": "developer-tools.toggleComplexityHints",
        "title": "Toggle Complexity Hints",
        "category": "Developer Tools"
      },
      {
        "command": "developer-tools.analyzeFileComplexity",
        "title": "Analyze File Complexity",
        "category": "Developer Tools"
      },
      {
        "command": "developer-tools.showComplexityReport",
        "title": "Show Complexity Report",
        "category": "Developer Tools"
      }
    ],
    "views": {
      "developer-tools": [
        {
          "type": "webview",
          "id": "developer-tools.passwordGenerator",
          "name": "Password Generator",
          "icon": "$(lock)",
          "contextualTitle": "Password Generator"
        },
        {
          "type": "webview",
          "id": "developer-tools.notesTable",
          "name": "Notes",
          "icon": "$(note)",
          "contextualTitle": "Notes"
        },
        {
          "type": "webview",
          "id": "developer-tools.sessionTracker",
          "name": "Session Tracker",
          "icon": "$(clock)",
          "contextualTitle": "Session Tracker",
          "when": "config.developer-tools.session.enabled"
        },
        {
          "type": "webview",
          "id": "developer-tools.portManager",
          "name": "Port Manager",
          "icon": "$(plug)",
          "contextualTitle": "Port Manager",
          "when": "config.developer-tools.ports.enabled"
        }
      ],
      "developer-tools-note-editor": [
        {
          "type": "webview",
          "id": "developer-tools.noteEditor",
          "name": "Note Editor",
          "icon": "$(edit)",
          "contextualTitle": "Note Editor",
          "visibility": "collapsed"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "developer-tools",
          "title": "Developer Tools",
          "icon": "$(tools)"
        },
        {
          "id": "developer-tools-note-editor",
          "title": "Note Editor",
          "icon": "$(edit)"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "developer-tools.addNote",
          "group": "developer-tools@1",
          "when": "editorTextFocus"
        },
        {
          "command": "developer-tools.editNote",
          "group": "developer-tools@2",
          "when": "editorTextFocus"
        },
        {
          "command": "developer-tools.deleteNote",
          "group": "developer-tools@3",
          "when": "editorTextFocus"
        }
      ],
      "commandPalette": [
        {
          "command": "developer-tools.addNote",
          "when": "editorIsOpen"
        },
        {
          "command": "developer-tools.editNote",
          "when": "editorIsOpen"
        },
        {
          "command": "developer-tools.deleteNote",
          "when": "editorIsOpen"
        },
        {
          "command": "developer-tools.showNotesPanel",
          "when": "editorIsOpen"
        },
        {
          "command": "developer-tools.analyzeFileComplexity",
          "when": "editorIsOpen"
        },
        {
          "command": "developer-tools.showComplexityReport",
          "when": "editorIsOpen"
        }
      ]
    },
    "keybindings": [
      {
        "command": "developer-tools.addNote",
        "key": "ctrl+alt+n",
        "mac": "cmd+alt+n",
        "when": "editorTextFocus"
      },
      {
        "command": "developer-tools.showNotesPanel",
        "key": "ctrl+alt+m",
        "mac": "cmd+alt+m",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Developer Tools",
      "properties": {
        "developer-tools.notes.autoExport": {
          "type": "boolean",
          "default": false,
          "description": "Automatically export notes to .vscode/notes/ when changes are made."
        },
        "developer-tools.notes.gitignore": {
          "type": "boolean",
          "default": false,
          "description": "If true, automatically adds .vscode/notes/ to .gitignore."
        },
        "developer-tools.session.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable the Session Tracker feature in the sidebar."
        },
        "developer-tools.session.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start session tracking when a workspace is opened."
        },
        "developer-tools.session.idleTimeoutMinutes": {
          "type": "number",
          "default": 5,
          "description": "Minutes of inactivity before time is no longer counted as active."
        },
        "developer-tools.ports.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable the Port Manager feature in the sidebar."
        },
        "developer-tools.ports.autoRefreshSeconds": {
          "type": "number",
          "default": 10,
          "minimum": 0,
          "description": "Seconds between automatic port list refreshes. Set to 0 to disable."
        },
        "developer-tools.ports.showEstablished": {
          "type": "boolean",
          "default": false,
          "description": "Show ESTABLISHED connections in addition to LISTEN."
        },
        "developer-tools.complexity.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Show inline complexity hints on functions."
        },
        "developer-tools.complexity.minLevel": {
          "type": "string",
          "enum": ["low", "moderate", "high", "very-high"],
          "default": "moderate",
          "description": "Minimum complexity level to display hints for."
        },
        "developer-tools.complexity.thresholds": {
          "type": "object",
          "default": { "moderate": 6, "high": 11, "veryHigh": 21 },
          "description": "Cyclomatic complexity thresholds for each level."
        },
        "developer-tools.complexity.showCognitive": {
          "type": "boolean",
          "default": true,
          "description": "Show cognitive complexity alongside cyclomatic."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "overrides": {
    "diff": "^8.0.3"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  }
}
